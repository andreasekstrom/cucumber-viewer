doctype html
html
  head
    title= title
    link(rel='stylesheet', href='#{basePath}/stylesheets/style.css')
    link(rel='stylesheet', href='#{basePath}/stylesheets/idea.css')
    script(src='#{basePath}/javascripts/highlight.js')
    script(src='#{basePath}/javascripts/gherkin_en.js')
    script.
      hljs.initHighlightingOnLoad()

  body
    a(href="https://github.com/andreasekstrom/cucumber-viewer", class="github-ribbon")
      img(src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png", alt="Fork me on GitHub")

    #main
      header
        strong Products
        ul
          - each product in products
            li
              a(href='#{basePath}/#{product.id}/features') #{product.name}
      section
        block content
